<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hestia.MainPage"
             BackgroundImageSource="bocchi.png">

    <Grid ColumnDefinitions="*,Auto,*">
        <Grid
            Grid.Column="1"
            RowSpacing="10"
            RowDefinitions="1*,1.25*,*"
            VerticalOptions="Fill">
            <Label Style="{StaticResource BigText}"
                   Text="Hestia"
                   FontSize="68"
                   Grid.Row="0"
                   VerticalOptions="End"
                   HorizontalOptions="Center"
                  />
            <Button 
                Style="{StaticResource BotaoPadrao}"
                    Text="ENTRAR"
                    HeightRequest="30"
                    WidthRequest="140"
                    Grid.Row="1"
                    VerticalOptions="End"
                    Clicked="EnterInitialPage">
            </Button>
        </Grid>
    </Grid>

</ContentPage>
